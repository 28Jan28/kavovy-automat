// Testovací skript pro přihlášení Jana Vydry
document.addEventListener('DOMContentLoaded', function() {
  // Funkce pro automatické vyplnění a odeslání přihlašovacího formuláře
  setTimeout(() => {
    const loginForm = document.getElementById('login-form');
    if (loginForm) {
      console.log("Vyplňuji přihlašovací údaje pro Jana Vydru...");
      
      // Vyplnění emailu
      const emailInput = document.getElementById('login-email');
      if (emailInput) {
        emailInput.value = 'jan.vydra@sfs.com';
      }
      
      // Výběr přihlášení heslem
      const passwordRadio = document.querySelector('input[name="login-method"][value="password"]');
      if (passwordRadio) {
        passwordRadio.checked = true;
        // Simulujeme změnu pro zobrazení správného pole
        const event = new Event('change');
        passwordRadio.dispatchEvent(event);
      }
      
      // Vyplnění hesla
      const passwordInput = document.getElementById('login-password');
      if (passwordInput) {
        passwordInput.value = 'Kava2026';
      }
      
      console.log("Přihlašovací údaje vyplněny, odesílám formulář...");
      
      // Přihlášení
      loginForm.dispatchEvent(new Event('submit'));
    } else {
      console.error("Přihlašovací formulář nenalezen!");
    }
  }, 1000); // Počkáme 1 sekundu po načtení stránky
});